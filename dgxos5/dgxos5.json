{
    "variables":
        {
            "platform": "dgx_a100",
            "dgxos5_iso": "/scratch/DGXOS-5.0.5-2021-05-03-15-52-28.iso",
            "dgxos5_sha256sum": "dc17e3ed2d5858c1ef8947baad862ffa1b546a88d815f70a91cf5afe52395a90"
        },
    "builders": [
        {
            "type": "qemu",
            "communicator": "ssh",
            "ssh_username": "root",
            "ssh_password": "root",
            "ssh_timeout": "90m",
            "iso_url": "file:{{user `dgxos5_iso`}}",
            "iso_checksum": "sha256:{{user `dgxos5_sha256sum`}}",
            "boot_command": [
                "<down>e<down><down><end> ",
                "force-curtin=http://{{ .HTTPIP }}:{{ .HTTPPort }}/curtin.yaml ",
                "force-platform={{user `platform`}} ",
                "force-bootdisk=vda ",
                "no-mlnx-fw-update ",
                "start-systemd-networkd",
                "<f10>"
            ],
            "http_directory": "http/{{ user `platform`}}",
            "boot_wait": "3s",
            "disk_size": "30G",
            "headless": true,
            "vnc_bind_address": "0.0.0.0",
            "memory": 8192,
            "qemuargs": [
                [ "-serial", "stdio" ],
                [ "-smbios", "type=0,uefi=on" ],
                [ "-smp", "8"]
            ]
        }
    ],
    "post-processors": [
        {
            "type": "shell-local",
            "inline_shebang": "/bin/bash -e",
            "inline": [
                "source ../scripts/setup-nbd",
                "OUTPUT='dgxos5.tar.gz'",
                "source ../scripts/tar-root"
            ]
        }
    ]
}
